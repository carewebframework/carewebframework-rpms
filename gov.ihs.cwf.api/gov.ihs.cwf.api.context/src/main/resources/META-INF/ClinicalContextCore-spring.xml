<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans.xsd">

	<beans profile="desktop">

		<!-- Shared clinical contexts. -->

		<bean id="patientContext" parent="managedContext"
			class="gov.ihs.cwf.context.PatientContext">
		</bean>

		<bean id="encounterContext" parent="managedContext"
			class="gov.ihs.cwf.context.EncounterContext">
		</bean>

		<bean id="locationContext" parent="managedContext"
			class="gov.ihs.cwf.context.LocationContext" depends-on="userContext">
		</bean>

	</beans>
</beans>
