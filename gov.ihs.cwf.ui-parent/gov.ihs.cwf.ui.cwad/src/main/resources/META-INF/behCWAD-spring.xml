<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin url="~./gov/ihs/cwf/ui/cwad/main.zul" id="behCWAD"
			name="Crises/Warnings/ADRs/Directives">
			<cwp:serialization>
				<cwp:property id="allowPrint" name="Allow Printing"
					type="boolean" description="If true, printing is allowed." />
				<cwp:property id="color" name="Background Color" type="color"
					description="Background color." />
				<cwp:property id="popupFlags" name="Popup Flags" type="boolean"
					description="Popup flags." />
			</cwp:serialization>
			<cwp:resource>
				<cwp:help-resource module="behCWADHelp" />
			</cwp:resource>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<bean name="behCWADMainController" class="gov.ihs.cwf.ui.cwad.MainController"
			scope="prototype">
			<property name="brokerSession" ref="brokerSession" />
		</bean>

		<bean name="behCWADDetailsController" class="gov.ihs.cwf.ui.cwad.DetailsController"
			scope="prototype">
			<property name="brokerSession" ref="brokerSession" />
		</bean>

	</beans>

</beans>