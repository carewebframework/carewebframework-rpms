<?taglib uri="http://www.carewebframework.org/tld/security" prefix="sec"?>
<?taglib uri="http://www.zkoss.org/dsp/web/core" prefix="c"?>

<zk xmlns="http://www.zkoss.org/2005/zul"
	xmlns:h="http://www.w3.org/1999/xhtml"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.zkoss.org/2005/zul http://www.zkoss.org/2005/zul/zul.xsd">

	<style>
	.behvitals-enter-unmarked input {
		width:10em;
		background:white;
		font-weight:normal;
		text-align:center;
	}
	
	.behvitals-enter-marked input {
		width:10em;
		background:yellow;
		font-weight:bold;
		text-align:center;
	}
	</style>
	
	<panel width="100%" height="100%"
		use="gov.ihs.cwf.ui.behvitals.Entry">
		<panelchildren>
			<grid id="grdVitals" fixedLayout="true">
				<columns>
					<column id="colTest" sclass="behvitals-enter-unmarked" align="right" width="12em">
						<image id="imgLocked" visible="true" />
					</column>
					<column id="colRange" sclass="behvitals-enter-unmarked" align="left" width="12em">
						<combobox id="cboDefaultUnits" width="10em">
							<comboitem label="Default" />
							<comboitem label="US" />
							<comboitem label="Metric" />
						</combobox>
					</column>
				</columns>
				<rows>
				</rows>
			</grid>
		</panelchildren>
		<toolbar id="tbar" align="end">
			<button id="btnNew" label="New Column" />
			<separator orient="vertical" width="40px" />
			<button id="btnOK" label="OK" />
			<button id="btnCancel" label="Cancel" />
		</toolbar>
	</panel>

</zk>