<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:cwp="http://www.carewebframework.org/schema/plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		 http://www.springframework.org/schema/beans/spring-beans.xsd
		 http://www.carewebframework.org/schema/plugin
		 http://www.carewebframework.org/schema/plugin/plugin-extensions.xsd">

	<beans profile="root">

		<cwp:plugin id="userHeader"
			url="~./gov/ihs/cwf/ui/userheader/userHeader.zul" name="Current User Header">
			<cwp:serialization>
				<cwp:property name="Background Color" id="color" type="color"
					description="Sets the background color." />
			</cwp:serialization>
		</cwp:plugin>

	</beans>

	<beans profile="desktop">

		<bean id="userHeaderController" class="gov.ihs.cwf.ui.userheader.UserHeader"
			scope="prototype" />

	</beans>

</beans>