<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

	<beans profile="root">

		<bean id="securityService" class="gov.ihs.cwf.security.impl.SecurityServiceImpl">
			<property name="logoutTarget" value="${org.carewebframework.security.logoutFormUrl:}" />
		</bean>

		<bean id="securityAuthenticationProvider" class="gov.ihs.cwf.security.base.BaseAuthenticationProvider" />
	
		<!-- Controllers -->
		<bean id="loginPaneController" class="gov.ihs.cwf.security.impl.LoginPaneController"
			scope="prototype">
			<property name="securityService" ref="securityService" />
		</bean>

		<bean id="loginWindowController" class="gov.ihs.cwf.security.impl.LoginWindowController"
			scope="prototype" />

		<bean id="changePasswordController" class="gov.ihs.cwf.security.impl.ChangePasswordController"
			scope="prototype" />

	</beans>
</beans>